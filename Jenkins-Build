pipeline {
    agent any
    stages {
        stage('compile') {
            steps {
                sh 'echo Code Compilation is in progress '
            }
        }
        stage('review') {
            steps {
                sh 'echo Code Review checks for syntax errors and code quality '
            }
        }
        stage('Unit test') {
            steps {
                sh 'echo Running unit testing'
            }
        }
        stage('coverage') {
            steps {
                sh 'echo checks how much code is covered in unit testing '
            }
        } 
        stage('package') {
            steps {
                sh 'echo generated executable file artifact'
            }
        }
stage('Email-Notification'){
steps{
mail bcc: '', body: 'This is the Maven Build Pipeline process.', cc: '', from: '', replyTo: '', subject: 'Jenkins Pipeline Job', to: 'dongarimallieswari29@gmail.com'
}

}
post {
  failure {
    // One or more steps need to be included within each condition's block.
mail bcc: '', body: 'This is the Maven Build Pipeline process.', cc: '', from: '', replyTo: '', subject: 'Jenkins Pipeline Job', to: 'dongarimallieswari29@gmail.com'
  }
  fixed {
    // One or more steps need to be included within each condition's block.
mail bcc: '', body: 'This is the Maven Build Pipeline process.', cc: '', from: '', replyTo: '', subject: 'Jenkins Pipeline Job', to: 'dongarimallieswari29@gmail.com'
  }
}
}
}

