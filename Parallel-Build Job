pipeline {
    agent any
stages{
       stage('Parallel-Build Job') {
            steps {
                parallel(
                  development: {
                        sh 'echo Running development job'
                    },
                    production: {
                        sh 'echo Running production job'
                    },
                )
              }
            }
        stage('Email-Notification'){
            steps{
                mail bcc: '', body: '''Hi...Welcome to Email Alerts
                Thanks
                Mallieswari.D''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'dongarimallieswari29@gmail.com'
                 }

                                   }  

      }

}
